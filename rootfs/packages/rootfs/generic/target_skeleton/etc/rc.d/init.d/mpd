PATH="/sbin:/bin:/usr/sbin:/usr/bin"
export LD_LIBRARY_PATH=/opt/onyx/arm/lib

case "$1" in
    restart)
        $0 stop
        $0 start
        ;;
    start)
        echo "Starting mpd server"
        modprobe snd-soc-imx-3stack-wm8711
        mpd
        ;;
    stop)
        echo "Stopping mpd server"
        modprobe -r snd-soc-imx-3stack-wm8711
        killall mpd
        ;;
esac
